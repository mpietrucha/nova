{
    "name": "mpietrucha/nova",
    "description": "A Laravel Nova utility package.",
    "license": "MIT",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Micha≈Ç Pietrucha",
            "email": "michal.pietrucha@off-site.pl"
        }
    ],
    "require": {
        "php": "^8.5",
        "mpietrucha/utility": "^1.0",
        "spatie/laravel-medialibrary": "^11.17",
        "spatie/laravel-translatable": "^6.11"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "dev-main",
        "illuminate/support": "^12.12",
        "laravel/nova": "^5.0",
        "laravel/nova-devtool": "^1.7",
        "mpietrucha/pint": "^1.0",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^7.2"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Mpietrucha\\Nova\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mpietrucha\\Nova\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@composer normalize"
        ],
        "lint": "pint --verbose --parallel",
        "prettier:config": "curl -sSLO https://raw.githubusercontent.com/mpietrucha/prettier/refs/heads/main/dist/.prettierrc",
        "test": [
            "@test:lint",
            "@test:types"
        ],
        "test:lint": "@lint --test",
        "test:types": "phpstan analyse --ansi"
    },
    "$schema": "https://getcomposer.org/schema.json"
}
